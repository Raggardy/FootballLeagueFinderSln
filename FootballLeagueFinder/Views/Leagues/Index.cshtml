@model IEnumerable<League>

<h1>Leagues Index</h1>

<div class="album py-5 bg-light">
        <div class="container">
             <div class="row">
        @foreach(var item in Model)
        {
           
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Photo" width="100%" height="225" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text">@item.Name</p>
                  <p class="card-text">@item.Location</p>
                  <div class="d-flex justify-content-between align-items-center">
                    
                      <a type="btn btn-success" asp-controller="Leagues" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-lg btn-outline-info">View</a> 
                      <a type="btn btn-success" asp-controller="Leagues" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-lg btn-outline-success">Edit</a>
                      <a type="btn btn-success" asp-controller="Leagues" asp-action="Create" asp-route-id="@item.Id" class="btn btn-lg btn-outline-secondary">Create</a>
                      <a type="btn btn-success" asp-controller="Leagues" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-lg btn-outline-danger">Delete</a>
                      
                    
                    
                  </div>
                </div>
              </div>
            </div>           
        }
          </div>
         </div>
        </div>
