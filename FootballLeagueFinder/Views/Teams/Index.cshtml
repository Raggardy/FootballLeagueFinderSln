@model IEnumerable<Team>
<h1>Teams Index</h1>
      
      <div class="album py-3 bg-light">
        <div class="container">
          <div class="row">

            
            @foreach(var item in Model)
            {
               <div class="col-md-4 ">
                <h3 class="card-text"> @item.Name</h3>
                <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Photo" width="100%" height="225" alt="Card image cap">
                <div class="card-body">
                  
                  <h5 class="card-text">Manager: @item.Manager</h5>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    
                       <a type="btn btn-success" asp-controller="Teams" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-lg btn-outline-info">View</a>
                      <a type="btn btn-success" asp-controller="Teams" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-lg btn-outline-success">Edit</a>
                       <a type="btn btn-success" asp-controller="Teams" asp-action="Create" asp-route-id="@item.Id" class="btn btn-lg btn-outline-secondary">Create</a>
                      <a type="btn btn-success" asp-controller="Teams" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-lg btn-outline-danger">Delete</a>
                    
                    
                  </div>
                </div>
              </div>
             </div>
            }
             
            </div>
          </div>
         </div>