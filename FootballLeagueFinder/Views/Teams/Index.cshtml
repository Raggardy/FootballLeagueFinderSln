@model IEnumerable<Team>
<h1>Teams Index</h1>

      <div class="album py-3 bg-light">
        <div class="container">

          <div class="row">
            
            @foreach(var item in Model)
            {
               <div class="col-md-4 ">
                <h3 class="card-text"> @item.Name</h3>
                <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Photo" width="100%" height="225" alt="Card image cap">
                <div class="card-body">
                  
                  <h5 class="card-text">Manager: @item.Manager</h5>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-muted">Muted text</small>
                  </div>
                </div>
              </div>
             </div>
            }
             
            </div>
          </div>
         </div>